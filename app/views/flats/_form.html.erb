<div class="form">
  <%= simple_form_for flat do |r| %>
    <%= r.input :name %>
    <%= r.input :address %>
    <%= r.input :picture %>
    <%= r.input :description %>
    <%= r.input :price_per_night %>
    <%= r.input :number_of_guests %>
    <%= r.button :submit, class: "btn btn-primary" %>
    <% end %>
</div><br>
